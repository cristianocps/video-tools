{
  "name": "video-audio-merger",
  "version": "1.0.0",
  "description": "Simple Electron app to merge audio and video files",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "prepare-ffmpeg": "node scripts/prepare-ffmpeg.js",
    "electron:build": "npm run prepare-ffmpeg && vite build && electron-builder",
    "build:win": "npm run prepare-ffmpeg && vite build && electron-builder --win",
    "build:win:no-wine": "npm run prepare-ffmpeg && vite build && node scripts/build-win-no-wine.js",
    "build:win:x64": "npm run prepare-ffmpeg && vite build && node scripts/build-win-x64.js",
    "build:linux": "npm run prepare-ffmpeg && vite build && electron-builder --linux",
    "build:linux:deb": "npm run prepare-ffmpeg && vite build && electron-builder --linux deb",
    "build:linux:rpm": "npm run prepare-ffmpeg && vite build && electron-builder --linux rpm",
    "build:linux:appimage": "npm run prepare-ffmpeg && vite build && electron-builder --linux AppImage",
    "build:linux:snap": "npm run prepare-ffmpeg && vite build && electron-builder --linux snap",
    "build:linux:flatpak": "npm run prepare-ffmpeg && vite build && electron-builder --linux flatpak",
    "build:mac": "npm run prepare-ffmpeg && vite build && electron-builder --mac",
    "build:all": "npm run prepare-ffmpeg && vite build && electron-builder --win --linux --mac"
  },
  "keywords": [
    "electron",
    "video",
    "audio",
    "merge",
    "ffmpeg"
  ],
  "author": "Video Tools",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^0.2.52",
    "@anthropic-ai/sdk": "^0.37.0",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.videotools.merger",
    "productName": "Video Tools",
    "copyright": "Copyright Â© 2024",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**",
      "node_modules/ffprobe-static/**"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "bin/",
        "to": "bin/",
        "filter": [
          "ffmpeg",
          "ffmpeg.exe",
          "ffprobe",
          "ffprobe.exe"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Video Tools",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Video Tools",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap",
        "flatpak"
      ],
      "icon": "build/icons",
      "category": "AudioVideo",
      "maintainer": "videotools@example.com",
      "vendor": "Video Tools",
      "synopsis": "Merge, extract and remove audio from videos",
      "description": "A simple tool to merge audio and video files, extract audio from videos, and remove audio tracks. Powered by FFmpeg.",
      "desktop": {
        "Name": "Video Tools",
        "Comment": "Merge, extract and remove audio from videos",
        "Categories": "AudioVideo;Audio;Video;AudioVideoEditing",
        "Keywords": "video;audio;merge;extract;ffmpeg"
      }
    },
    "deb": {
      "depends": [],
      "packageCategory": "video",
      "priority": "optional"
    },
    "rpm": {
      "depends": []
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "summary": "Merge, extract and remove audio from videos",
      "plugs": [
        "default",
        "home",
        "removable-media",
        "audio-playback"
      ],
      "stagePackages": [
        "default"
      ]
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "23.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "23.08",
      "finishArgs": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/mnt",
        "--talk-name=org.freedesktop.Notifications"
      ],
      "modules": [
        {
          "name": "ffmpeg",
          "buildsystem": "autotools",
          "sources": [
            {
              "type": "archive",
              "url": "https://ffmpeg.org/releases/ffmpeg-6.1.tar.xz",
              "sha256": "488c76e57dd9b3bee901f71d5c95eaf1db4a5a31fe46a28654e837144207c270"
            }
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.video",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns"
    }
  }
}
